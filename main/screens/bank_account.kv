<BankAccountScreen>:
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:"images/wheretosave.png"
    FloatLayout:
        Button:
            text: 'piggy bank'
            pos: 630, 260
            size: 150, 100
            font_name: 'COMIC'
            background_normal:'images/ButtonLarge.png'
            color:[100, 100, 0, 8]
            size_hint: None, None
            on_press: root.manager.current = 'sml'
        Button:
            text: 'savings account'
            pos: 230, 150
            size: 200, 100
            font_name: 'COMIC'
            background_normal:'images/ButtonLarge.png'
            color:[100, 100, 0, 8]
            size_hint: None, None
            on_press: root.manager.current = 'sml'
        Button:
            text: 'investment account'
            size: 190, 100
            font_name: 'COMIC'
            background_normal:'images/ButtonLarge.png'
            color:[100, 100, 0, 8]
            pos: 600, 30
            size_hint: None, None
            on_press: root.manager.current = 'sml'
