<BankAccountScreen>:
    GridLayout:
        row: 4
        Label:
            text: 'which account to save?'
            size: 100, 50
            pos: 350, 300
        Button:
            text: 'piggy bank'
            size: 100, 50
            pos: 350, 200
            on_press: root.manager.current = 'sml'
        Button:
            text: 'savings account'
            size: 100, 50
            pos: 350, 150
            on_press: root.manager.current = 'sml'
        Button:
            text: 'some high risk investment'
            size: 100, 50
            pos: 350, 100
            on_press: root.manager.current = 'investment'