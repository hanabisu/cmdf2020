<FirstStepScreen>:
    GridLayout:

        Label:
            font_size: 32
            text: 'check'
            pos: 350, 500
        Button:
            text: 'spend it all'
            size: 100, 50
            pos: 350, 400
            on_press: root.manager.current = 'sml'
        Button:
            text: 'save some'
            size: 100, 50
            pos: 350, 300
            on_press: root.manager.current = 'save_some'
        Button:
            text: 'save all'
            size: 100, 50
            pos: 350, 200
            on_press: root.manager.current = 'save_all'
