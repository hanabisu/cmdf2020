<FirstStepScreen>:
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:"images/relativemoney.png"
    FloatLayout:
        Label:
            id: item_name
            color:[0, 0, 0,1]
            font_size:"20sp"
            size_hint: None, None
            size: 75, 50
            pos: (205, 465)
        Label:
            id: balance
            font_size:"20sp"
            color:[0, 0, 0, 1]
            size_hint: None, None
            size: 75, 50
            pos: (205, 385)

        Label:
            text: "What would you like to do with your money?"
            color:[0, 0, 0,1]
            font_size:"20sp"
            size_hint: None, None
            size: 75, 50
            pos: (550, 330)

        Button:
            text: 'spend it all'
            background_normal:'images/ButtonLarge.png'
            color:[100, 100, 0, 8]
            size_hint: None, None
            size: 200, 100
            pos: (550, 250)
            on_press: root.manager.current = 'ending'

        Button:
            text: 'save some'
            size_hint: None, None
            background_normal:'images/ButtonLarge.png'
            color:[100, 100, 0, 8]
            pos: (550, 150)
            size: 200, 100
            on_press: root.manager.current = 'save_some'
        Button:
            text: 'save all'
            size_hint: None, None
            background_normal:'images/ButtonLarge.png'
            color:[100, 100, 0, 8]
            pos: (550, 50)
            size: 200, 100
            on_press: root.manager.current = 'bank_account'
