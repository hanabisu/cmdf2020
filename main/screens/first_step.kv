<FirstStepScreen>:
    canvas.before:
        Rectangle:
            pos:self.pos
            size:self.size
            source:"images/relativemoney.png"
    FloatLayout:
        Label:
            id: item_name
            color:[0,0,1,1]
            size_hint: None, None
            size: 75, 50
            pos: (205, 465)
        Label:
            id: balance
            color:[0,0,1,1]
            size_hint: None, None
            size: 75, 50
            pos: (205, 385)

        Button:
            text: 'spend it all'
            size_hint: None, None
            size: 75, 50
            pos: (600, 300)
            on_press: root.manager.current = 'work_option'
        Button:
            text: 'save some'
            size_hint: None, None
            pos: (600, 200)
            size: 75, 50
            on_press: root.manager.current = 'save_some'
        Button:
            text: 'save all'
            size_hint: None, None
            pos: (600, 100)
            size: 75, 50
            on_press: root.manager.current = 'save_all'
