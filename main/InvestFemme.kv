<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'This is the title'
        AnchorLayout:
            orientation: 'vertical'
            anchor_x: 'center'
            anchor_y: 'center'
            padding: 10
        
            GridLayout:
                rows:2
                Button:
                    size: 75, 50
                    size_hint: None, None
                    text: 'Start App'
                    on_press: root.manager.current = 'enter_item'
                Button:
                    size: 75, 50
                    size_hint: None, None
                    text: 'Quit'
<FirstStepScreen>:
    GridLayout:
        rows:3
        Button:
            text: 'You are given money'
            
        Button:
            text: 'What do you want to do'
            on_press: root.manager.current = 'main'

<EnterItemScreen>:
    GridLayout:
        rows:3
        Button:
            text: 'What do you want to buy?'
            
        TextInput:
            id:txt_input
            multiline: False
            on_text_validate: root.manager.current = 'first_step'
            
        Button:
            text: 'Back to start'
            on_press: root.manager.current = 'main'

